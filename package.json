{
  "name": "glassworm-scanner",
  "version": "1.0.0",
  "description": "Security scanner for detecting GlassWorm and other malicious patterns in JavaScript/TypeScript codebases",
  "main": "scan-glassworm.js",
  "type": "commonjs",
  "bin": {
    "glassworm-scanner": "scan-glassworm.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "scan": "node scan-glassworm.js",
    "scan:with-low": "INCLUDE_LOW=1 node scan-glassworm.js",
    "scan:ci": "CI=true FAIL_ON=high node scan-glassworm.js",
    "scan:ci:critical": "CI=true FAIL_ON=critical node scan-glassworm.js"
  },
  "keywords": [
    "security",
    "scanner",
    "malware",
    "glassworm",
    "npm",
    "supply-chain",
    "code-analysis",
    "javascript",
    "typescript"
  ],
  "author": "David Grimbichler",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:GrimbiXcode/glassworm-scanner.git"
  },
  "bugs": {
    "url": "https://github.com/GrimbiXcode/glassworm-scanner/issues"
  },
  "homepage": "https://github.com/GrimbiXcode/glassworm-scanner#readme",
  "engines": {
    "node": ">=16.0.0"
  }
}
